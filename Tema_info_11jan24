// Problema 3

#include <iostream>
#include <cstring>
using namespace std;
int main()
{
    char s[256],zi[5][10]={"luni","marti","miercuri","joi","vineri"};
    cin.getline(s,256);
    int a[5]={0};
    char *p=strtok(s," ");
    while(p!=NULL)
    {
        for(int i=0;i<5;i++)
            if(strcmp(p,zi[i])==0&&a[i]==0) {cout<<p<<endl;
                a[i]++;}
        
        p=strtok(NULL," ");
        
    }
}


//Problema 4

#include <iostream>
#include <cstring>
using namespace std;
int main()
{
    char s[20][11],aux[20][11];
    int k,n;
    cin>>n>>k;
    cin.ignore();
    for(int i=0;i<n;i++)
        cin.getline(s[i],10);
    cout<<endl;
    int ct=0;
    for(int i=0;i<n&&k>0;i++)
    {
        
        if(strchr("aeiou",s[i][strlen(s[i])-1])!=NULL)
        { strcpy(aux[ct],s[i]);
            ct++;
            k--;}
        
    }
    
    if(k>0) cout<<"nu exista";
    else
        for(int i=0;i<ct;i++)
            cout<<aux[i]<<endl;
    
    
}

