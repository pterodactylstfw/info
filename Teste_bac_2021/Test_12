#include <iostream>
using namespace std;
void frate(int x, int &y)
{
    int v[9];
    int i=0;
    while(x!=0)
    {
        int c=x%10;
        if(c<9)
            v[i]=c+1;
        else
        {
            y=-1;
            return;
        }
        x/=10;
        i++;
    }
    for(int j=i;j>=0;j--)
        y=y*10+v[j];
    
}

int main()
{
    int y=0;
    frate(9027,y);
    cout<<y;
}

